@model List<MVCCRUD.Models.DomainModels.Employee>

@{
}

<h1> Employees </h1>

<table class="table">
    <thead>
        <th> Id</th>
        <th> Name</th>
        <th> Email </th>
        <th> Salary</th>
        <th> Department</th>
        <th> </th>
    </thead>

    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td> @employee.Id </td>
                <td> @employee.Name </td>
                <td> @employee.Email </td>
                <td> @employee.Salary </td>
                <td> @employee.Department </td>

                <td> <a href="employees/view/@employee.Id"> Edit </a> </td>
            </tr>
            
        }
    </tbody>


</table>